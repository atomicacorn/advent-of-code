{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "My attempts to the annual Advent of Code: https://adventofcode.com/",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "advent:2022": "npm run format && ts-node-esm src/2022/index.ts",
    "advent:2023": "npm run format && ts-node-esm src/2023/index.ts",
    "test": "jest",
    "test:2022": "jest src/2022",
    "test:2023": "jest src/2023"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.5",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-export-default-from": "7.18.10",
    "@babel/plugin-proposal-object-rest-spread": "7.20.2",
    "@babel/plugin-proposal-optional-chaining": "7.18.9",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@types/jest": "29.2.3",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "jest": "29.3.1",
    "prettier": "2.8.0",
    "ts-jest": "29.0.3",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.9.3",
    "webpack": "5.89.0",
    "webpack-cli": "5.0.0"
  }
}
